---
/**
 * RelatedServices.astro
 * Cross-linking panel to related services.
 * 
 * DIOS: data-nt-section="related-services"
 */
import type { ServicePage } from "../../data/services";

interface Props {
  services: ServicePage[];
}

const { services } = Astro.props;
---

<section class="related" data-nt-section="related-services">
  <h2 class="related__heading">Related services</h2>
  <div class="related__grid">
    {services.map((service) => (
      <a 
        href={`/services/${service.slug}/`} 
        class="related__card"
        data-nt-event="related_service_click"
        data-service={service.slug}
      >
        <strong class="related__name">{service.name}</strong>
        <p class="related__desc">{service.metaDescription}</p>
      </a>
    ))}
  </div>
  
  <nav class="related__nav">
    <a href="/services/" data-nt-event="back_to_hub">‚Üê All Services</a>
  </nav>
</section>

<style>
  .related {
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle, #E1E3E8);
  }

  .related__heading {
    font-size: 1.25rem;
    color: var(--color-brand-primary, #0B1E3A);
    margin: 0 0 1rem;
  }

  .related__grid {
    display: grid;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .related__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .related__card {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    background: var(--brand-surface-muted, #F8FAFC);
    border: 1px solid var(--border-subtle, #E1E3E8);
    border-radius: 0.375rem;
    text-decoration: none;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
  }

  .related__card:hover {
    border-color: var(--color-action, #2563EB);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .related__name {
    font-weight: 600;
    color: var(--color-brand-primary, #0B1E3A);
  }

  .related__desc {
    font-size: 0.8125rem;
    color: var(--text-muted, #64748B);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .related__nav {
    margin-top: 1.5rem;
    padding-top: 1rem;
  }

  .related__nav a {
    color: var(--color-action, #2563EB);
    text-decoration: none;
    font-weight: 500;
  }

  .related__nav a:hover {
    text-decoration: underline;
  }
</style>