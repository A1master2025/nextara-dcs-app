---
/**
 * ProcessTimeline.astro
 * "How it works" section with numbered steps.
 * 
 * DIOS: data-nt-section="process"
 */
import type { ProcessStep } from "../../data/services";

interface Props {
  steps: ProcessStep[];
}

const { steps } = Astro.props;
---

<section class="process" data-nt-section="process">
  <h2 class="process__heading">How it works</h2>
  <ol class="process__list">
    {steps.map((step) => (
      <li class="process__step">
        <span class="process__number" aria-hidden="true">{step.step}</span>
        <div class="process__content">
          <strong class="process__title">{step.title}</strong>
          <p class="process__desc">{step.description}</p>
        </div>
      </li>
    ))}
  </ol>
</section>

<style>
  .process {
    margin-bottom: 3rem;
  }

  .process__heading {
    font-size: 1.5rem;
    color: var(--color-brand-primary, #0B1E3A);
    margin: 0 0 1.5rem;
  }

  .process__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .process__step {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .process__number {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-brand-primary, #0B1E3A);
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 50%;
  }

  .process__content {
    flex: 1;
    padding-top: 0.25rem;
  }

  .process__title {
    display: block;
    font-weight: 600;
    color: var(--color-brand-primary, #0B1E3A);
    margin-bottom: 0.25rem;
  }

  .process__desc {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--text-muted, #64748B);
    line-height: 1.5;
  }
</style>