---
/**
 * Footer Component
 * Global site footer with secondary navigation and legal links.
 * DIOS: data-nt-section="footer"
 */
import { SITE } from "../config/site";
import { primaryNav } from "../data/nav";

const currentYear = new Date().getFullYear();
---

<footer class="nt-footer" data-nt-section="footer">
  <div class="nt-footer__inner">
    <div class="nt-footer__brand">
      <a href="/" class="nt-footer__logo" data-nt-event="footer_home">
        {SITE.shortName}
      </a>
      <p class="nt-footer__tagline">
        Governed digital growth systems.
      </p>
    </div>

    <nav class="nt-footer__nav" aria-label="Footer navigation">
      <ul class="nt-footer__nav-list">
        {primaryNav.map((item) => (
          <li>
            
              href={item.href}
              class="nt-footer__nav-link"
              data-nt-event={`footer_${item.ntEvent?.replace("nav_", "")}`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="nt-footer__legal">
      <p class="nt-footer__copyright">
        &copy; {currentYear} {SITE.name}. All rights reserved.
      </p>
      <div class="nt-footer__legal-links">
        <a href="/privacy/" class="nt-footer__legal-link" data-nt-event="footer_privacy">
          Privacy Policy
        </a>
        <a href="/terms/" class="nt-footer__legal-link" data-nt-event="footer_terms">
          Terms of Service
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .nt-footer {
    background: var(--color-brand-primary, #0B1E3A);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 3rem 1.5rem 2rem;
  }

  .nt-footer__inner {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .nt-footer__inner {
      grid-template-columns: 1fr auto 1fr;
      align-items: start;
    }
  }

  .nt-footer__brand {
    text-align: center;
  }

  @media (min-width: 768px) {
    .nt-footer__brand {
      text-align: left;
    }
  }

  .nt-footer__logo {
    font-size: 1.125rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;
  }

  .nt-footer__tagline {
    margin: 0.5rem 0 0;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  .nt-footer__nav-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 768px) {
    .nt-footer__nav-list {
      gap: 2rem;
    }
  }

  .nt-footer__nav-link {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.15s ease;
  }

  .nt-footer__nav-link:hover,
  .nt-footer__nav-link:focus-visible {
    color: #fff;
  }

  .nt-footer__nav-link:focus-visible {
    outline: 2px solid var(--color-action, #2563EB);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .nt-footer__legal {
    text-align: center;
  }

  @media (min-width: 768px) {
    .nt-footer__legal {
      text-align: right;
    }
  }

  .nt-footer__copyright {
    margin: 0;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.8125rem;
  }

  .nt-footer__legal-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  @media (min-width: 768px) {
    .nt-footer__legal-links {
      justify-content: flex-end;
    }
  }

  .nt-footer__legal-link {
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    font-size: 0.75rem;
    transition: color 0.15s ease;
  }

  .nt-footer__legal-link:hover,
  .nt-footer__legal-link:focus-visible {
    color: rgba(255, 255, 255, 0.8);
  }
</style>