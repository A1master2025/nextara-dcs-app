---
import "../styles/global.css";
import TelemetryInit from "../components/TelemetryInit.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  ogImagePath?: string;
  robots?: string;
  /** Optional: page-specific schema nodes (BreadcrumbList, Service, ItemList, etc.) */
  extraGraph?: Record<string, any>[];
}

const {
  title: pageTitle,
  description: pageDescription,
  ogImagePath,
  robots: robotsOverride,
  extraGraph = [],
} = Astro.props;

// Canonical origin is the single source of truth
const CANONICAL_ORIGIN = "https://nextara-ai-solutions.com";

// Netlify build context gating
const netlifyContext = process.env.CONTEXT ?? "local"; // production | deploy-preview | branch-deploy | local
const isProdDeploy = netlifyContext === "production";

// Robots policy
const defaultRobots = isProdDeploy ? "index,follow" : "noindex,nofollow";
// Non-prod: always noindex,nofollow (no override)
// Prod: allow per-page override if provided
const robots = isProdDeploy ? (robotsOverride ?? defaultRobots) : defaultRobots;

// Defaults
const DEFAULT_TITLE = "NexTara AI Solutions | AI-Powered Digital Growth for SMBs";
const DEFAULT_DESCRIPTION =
  "Get found online, turn visitors into leads, and see real ROI. AI-powered digital marketing built for small and medium businesses.";

const title = pageTitle || DEFAULT_TITLE;
const description = pageDescription || DEFAULT_DESCRIPTION;

// Canonical URL (always production origin)
const rawPath = Astro.url?.pathname || "/";
const normalizedPath =
  rawPath.includes(".") ? rawPath : rawPath.endsWith("/") ? rawPath : `${rawPath}/`;

const canonicalUrl = new URL(normalizedPath, CANONICAL_ORIGIN).toString();

// Optional OG image (absolute)
const ogImageAbs = ogImagePath
  ? new URL(ogImagePath, CANONICAL_ORIGIN).toString()
  : "https://nextara-ai-solutions.com/og/og-1200x630.png";

// Build JSON-LD as REAL JSON (no template leakage)
const schemaObject = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${CANONICAL_ORIGIN}/#organization`,
      name: "NexTara AI Solutions",
      url: `${CANONICAL_ORIGIN}/`,
      description:
        "SEO, Google Ads, and content marketing for small and medium businessesâ€”built to turn visibility into qualified leads and measurable ROI.",
      contactPoint: {
        "@type": "ContactPoint",
        contactType: "customer support",
        url: `${CANONICAL_ORIGIN}/contact/`,
      },
    },
    {
      "@type": "WebSite",
      "@id": `${CANONICAL_ORIGIN}/#website`,
      url: `${CANONICAL_ORIGIN}/`,
      name: "NexTara AI Solutions",
      publisher: { "@id": `${CANONICAL_ORIGIN}/#organization` },
    },
    {
      "@type": "WebPage",
      "@id": `${canonicalUrl}#webpage`,
      url: canonicalUrl,
      name: title,
      description,
      isPartOf: { "@id": `${CANONICAL_ORIGIN}/#website` },
      publisher: { "@id": `${CANONICAL_ORIGIN}/#organization` },
    },
    ...extraGraph,
  ],
};

const schemaJson = JSON.stringify(schemaObject);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Robots -->
    <meta name="robots" content={robots} />

    <!-- Core SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="NexTara AI Solutions" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageAbs} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageAbs} />

    <!-- Structured Data (centralized @graph) -->
    <script type="application/ld+json" set:html={schemaJson}></script>

    <!-- DIOS foundation: always have a dataLayer available -->
    <script>
      window.dataLayer = window.dataLayer || [];
    </script>

    <!-- Google Tag Manager (UNCHANGED) -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-N6HDR6L7");
    </script>
    <!-- End Google Tag Manager -->
  </head>

  <body>
    <!-- Google Tag Manager (noscript) (UNCHANGED) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-N6HDR6L7"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <Header />
    <slot />
    <Footer />
    <TelemetryInit />
  </body>
</html>
