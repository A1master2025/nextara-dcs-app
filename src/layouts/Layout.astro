---
import "../styles/global.css";
import TelemetryInit from "../components/TelemetryInit.astro";
import StructuredData from "../components/seo/StructuredData.astro";
import type { GraphNode } from "../components/seo/StructuredData.astro";
import { buildOrganization, buildWebSite, buildWebPage } from "../lib/schema/nodes";

/**
 * MVIG (Minimum Viable Indexing Gate)
 * - Canonical always points to production origin (prevents Netlify preview competing).
 * - Non-prod hosts: noindex,nofollow (defensive, no overrides allowed).
 * - Prod host: index,follow by default.
 * - Per-page robots override supported on prod only (e.g., /dcs-diagnostic/ => noindex,follow).
 * - Adds canonical, meta description, OG/Twitter, and structured data via StructuredData component.
 *
 * Phase 5 Update:
 * - Schema now uses centralized StructuredData component with @graph structure
 * - Supports extraGraph prop for page-specific schema (BreadcrumbList, Service, etc.)
 */

interface Props {
  title?: string;
  description?: string;
  ogImagePath?: string;
  robots?: string;
  /** Additional schema nodes from child layouts (BreadcrumbList, Service, ItemList) */
  extraGraph?: GraphNode[];
}

const {
  title: pageTitle,
  description: pageDescription,
  ogImagePath,
  robots: robotsOverride,
  extraGraph = [],
} = Astro.props;

// Production origin is the canonical source of truth
const CANONICAL_ORIGIN = "https://nextara-ai-solutions.com";

// Netlify build context (SSG-safe; deterministic)
const NETLIFY_CONTEXT = process.env.CONTEXT || "local";
const isProduction = NETLIFY_CONTEXT === "production";

// Canonical path normalization (trailing slash safety for route paths)
const rawPath = Astro.url?.pathname || "/";
const normalizedPath =
  rawPath.includes(".") ? rawPath : (rawPath.endsWith("/") ? rawPath : `${rawPath}/`);

// Canonical always uses production origin
const canonicalUrl = new URL(normalizedPath, CANONICAL_ORIGIN).toString();

// Default robots by environment
const defaultRobots = isProduction ? "index,follow" : "noindex,nofollow";

// Final robots:
// - Non-prod: always noindex,nofollow (do not allow overrides to weaken this)
// - Prod: allow per-page override (e.g., /dcs-diagnostic/ => noindex,follow)
const robots = isProduction ? (robotsOverride ?? defaultRobots) : defaultRobots;

// Defaults (Phase 2-safe)
const DEFAULT_TITLE = "NexTara AI Solutions — Digital Credibility System (DCS)";
const DEFAULT_DESCRIPTION =
  "Governed digital growth systems. Measure credibility, fix trust gaps, and prove what's real—across humans and machines.";

const title = pageTitle || DEFAULT_TITLE;
const description = pageDescription || DEFAULT_DESCRIPTION;

// Optional OG image
const ogImageAbs = ogImagePath ? new URL(ogImagePath, CANONICAL_ORIGIN).toString() : undefined;

// Phase 5: Build schema graph using centralized node builders
const baseGraph: GraphNode[] = [
  buildOrganization(CANONICAL_ORIGIN),
  buildWebSite(CANONICAL_ORIGIN),
  buildWebPage({
    origin: CANONICAL_ORIGIN,
    path: normalizedPath,
    title,
    description,
  }),
];

// Merge base graph with page-specific nodes (deduplication handled by StructuredData)
const schemaGraph = [...baseGraph, ...extraGraph];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- MVIG robots (env default + optional per-page override on prod only) -->
    <meta name="robots" content={robots} />

    <!-- Core SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="NexTara AI Solutions" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    {ogImageAbs && <meta property="og:image" content={ogImageAbs} />}

    <!-- Twitter -->
    <meta name="twitter:card" content={ogImageAbs ? "summary_large_image" : "summary"} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageAbs && <meta name="twitter:image" content={ogImageAbs} />}

    <!-- Structured Data (Phase 5: centralized @graph) -->
    <StructuredData graph={schemaGraph} />

